<!-- Install Banner (appears at top of page) -->
<div id="installBanner" class="glass-card slide-in-bottom fixed left-0 right-0 top-0 z-50 border-b border-white/30 p-4 shadow-lg" style="display: none;">
    <div class="mx-auto flex max-w-6xl items-center justify-between gap-4">
        <div class="flex items-center gap-4">
            <div class="flex-shrink-0">
                <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-r from-blue-600 to-purple-600 shadow-lg">
                    <i class="fas fa-hands-praying text-lg text-white"></i>
                </div>
            </div>
            <div class="min-w-0 flex-1">
                <h3 class="text-lg font-semibold text-gray-800">Install Prayer App</h3>
                <p class="text-sm text-gray-600">Add to your home screen for quick access to prayers</p>
            </div>
        </div>

        <div class="flex items-center gap-3">
            <button id="installButton" class="inline-flex items-center gap-2 rounded-xl bg-gradient-to-r from-blue-600 to-purple-600 px-4 py-2 text-sm font-medium text-white shadow-lg transition-all hover:scale-105 hover:shadow-xl">
                <i class="fas fa-download install-bounce"></i>
                <span>Install</span>
            </button>
            <button id="dismissBanner" class="p-2 text-gray-500 transition-colors hover:text-gray-700">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
</div>

<!-- Install Modal/Popup -->
<div id="installModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 p-4 backdrop-blur-sm" style="display: none;">
    <div class="glass-card w-full max-w-md rounded-2xl p-6 shadow-xl">
        <div class="text-center">
            <div class="mx-auto mb-4 flex h-20 w-20 items-center justify-center rounded-2xl bg-gradient-to-r from-blue-600 to-purple-600 shadow-lg">
                <i class="fas fa-hands-praying text-2xl text-white"></i>
            </div>

            <h2 class="mb-2 text-2xl font-bold text-gray-800">Install Prayer App</h2>
            <p class="mb-6 text-gray-600">Add FlockStudy to your home screen for easy access to your prayer community</p>

            <!-- Benefits -->
            <div class="mb-6 space-y-3 text-left">
                <div class="flex items-center gap-3">
                    <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-green-100">
                        <i class="fas fa-bolt text-sm text-green-600"></i>
                    </div>
                    <span class="text-sm text-gray-700">Quick access to prayers</span>
                </div>
                <div class="flex items-center gap-3">
                    <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-blue-100">
                        <i class="fas fa-bell text-sm text-blue-600"></i>
                    </div>
                    <span class="text-sm text-gray-700">Prayer reminders</span>
                </div>
                <div class="flex items-center gap-3">
                    <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-purple-100">
                        <i class="fas fa-heart text-sm text-purple-600"></i>
                    </div>
                    <span class="text-sm text-gray-700">Stay connected offline</span>
                </div>
            </div>

            <!-- Install Instructions -->
            <div id="iosInstructions" class="mb-6 rounded-xl bg-gradient-to-r from-gray-50 to-gray-100 p-4 text-left" style="display: none;">
                <h4 class="mb-3 flex items-center gap-2 font-semibold text-gray-800">
                    <i class="fab fa-apple text-lg"></i>
                    iOS Installation:
                </h4>
                <ol class="space-y-2 text-sm text-gray-600">
                    <li class="flex items-start gap-2">
                        <span class="mt-0.5 flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full bg-blue-500 text-xs text-white">1</span>
                        <span>Tap the <i class="fas fa-share mx-1"></i> Share button in Safari</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="mt-0.5 flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full bg-blue-500 text-xs text-white">2</span>
                        <span>Scroll down and tap "Add to Home Screen" <i class="fas fa-plus-square mx-1"></i></span>
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="mt-0.5 flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full bg-blue-500 text-xs text-white">3</span>
                        <span>Tap "Add" to confirm</span>
                    </li>
                </ol>
            </div>

            <div id="androidInstructions" class="mb-6 rounded-xl bg-gradient-to-r from-green-50 to-green-100 p-4 text-left" style="display: none;">
                <h4 class="mb-3 flex items-center gap-2 font-semibold text-gray-800">
                    <i class="fab fa-android text-lg"></i>
                    Android Installation:
                </h4>
                <ol class="space-y-2 text-sm text-gray-600">
                    <li class="flex items-start gap-2">
                        <span class="mt-0.5 flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full bg-green-500 text-xs text-white">1</span>
                        <span>Tap the <i class="fas fa-ellipsis-v mx-1"></i> menu button in Chrome</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="mt-0.5 flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full bg-green-500 text-xs text-white">2</span>
                        <span>Select "Add to Home screen" <i class="fas fa-home mx-1"></i></span>
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="mt-0.5 flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full bg-green-500 text-xs text-white">3</span>
                        <span>Tap "Add" to confirm</span>
                    </li>
                </ol>
            </div>

            <!-- Buttons -->
            <div class="flex gap-3">
                <button id="closeModal" class="flex-1 rounded-xl border-2 border-gray-300 bg-white px-4 py-3 font-medium text-gray-600 transition-all hover:border-gray-400 hover:bg-gray-50">
                    Maybe Later
                </button>
                <button id="installAppButton" class="flex-1 rounded-xl bg-gradient-to-r from-blue-600 to-purple-600 px-4 py-3 font-medium text-white shadow-lg transition-all hover:scale-105 hover:shadow-xl">
                    <span id="autoInstallText">Install Now</span>
                    <span id="manualInstallText" style="display: none;">Got It!</span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Floating Install Button (bottom right) -->
<div id="floatingInstall" class="fixed bottom-6 right-6 z-40" style="display: none;">
    <button class="group rounded-full bg-gradient-to-r from-blue-600 to-purple-600 p-4 text-white shadow-lg transition-all hover:scale-110 hover:shadow-xl">
        <i class="fas fa-download install-bounce text-xl"></i>
        <div class="absolute -top-12 right-0 whitespace-nowrap rounded-lg bg-gray-800 px-3 py-2 text-xs text-white opacity-0 transition-opacity group-hover:opacity-100">
            Install App
            <div class="absolute right-4 top-full h-0 w-0 border-l-4 border-r-4 border-t-4 border-l-transparent border-r-transparent border-t-gray-800"></div>
        </div>
    </button>
</div>