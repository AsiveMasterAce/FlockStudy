<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlockStudy</title>
    <link rel="shortcut icon" href="/icons/icon-192x192.png">
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FlockStudy.styles.css" asp-append-version="true" />
    <link rel="manifest" href="~/manifest.json">
    <script src="https://cdn.tailwindcss.com"></script> 
</head>
<body>

    <div class="flex min-h-screen items-center justify-center">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <div id="logoutModal" tabindex="-1" aria-hidden="true"
         class="fixed inset-0 z-50 flex hidden items-center justify-center bg-black bg-opacity-50">
        <div class="w-full max-w-md rounded-lg bg-white p-6 shadow-lg">
            <h3 class="mb-4 text-lg font-semibold text-gray-800">Confirm Logout</h3>
            <p class="mb-6 text-gray-600">Are you sure you want to log out?</p>
            <div class="flex justify-end gap-3">
                <button type="button"
                        data-modal-hide="logoutModal"
                        class="rounded-lg border border-gray-300 px-4 py-2 hover:bg-gray-100">
                    Cancel
                </button>
                <form asp-action="Logout" asp-controller="Account" method="post">
                    <button type="submit"
                            class="rounded-lg bg-red-600 px-4 py-2 text-white hover:bg-red-700">
                        Log Out
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    <script>
        document.querySelectorAll("[data-modal-toggle]").forEach(button => {
            button.addEventListener("click", () => {
                const target = document.getElementById(button.getAttribute("data-modal-target"));
                target.classList.remove("hidden");
            });
        });

        document.querySelectorAll("[data-modal-hide]").forEach(button => {
            button.addEventListener("click", () => {
                const target = document.getElementById(button.getAttribute("data-modal-hide"));
                target.classList.add("hidden");
            });
        });
    </script>


    <script>
        // PWA installation prompt
        let deferredPrompt;
        window.addEventListener('beforeinstallprompt', (e) => {
            deferredPrompt = e;
            showInstallPromotion();
        });

        function showInstallPromotion() {
            // Show install button or banner
            console.log('PWA installation available');
        }

        // Register service worker
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/sw.js');
        }

        // Request notification permission
        if ('Notification' in window) {
            Notification.requestPermission();
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
